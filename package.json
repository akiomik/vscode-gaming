{
  "name": "vscode-gaming",
  "displayName": "vscode-gaming",
  "description": "gaming theme for visual studio code",
  "publisher": "akiomik",
  "repository": "https://github.com/akiomik/vscode-gaming",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gaming.start",
        "title": "Start gaming mode"
      },
      {
        "command": "vscode-gaming.stop",
        "title": "Stop gaming mode"
      }
    ],
    "configuration": {
      "title": "Gaming",
      "properties": {
        "gaming.period": {
          "type": "number",
          "default": 10000,
          "description": "The colors cycle in milliseconds"
        },
        "gaming.updateTime": {
          "type": "number",
          "default": 50,
          "description": "The updating interval in milliseconds"
        },
        "gaming.target": {
          "type": "string",
          "default": "editor.background",
          "description": "The gaming target in `workbench.colorCustomizations` namespace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
