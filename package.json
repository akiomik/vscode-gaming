{
  "name": "vscode-gaming",
  "displayName": "vscode-gaming",
  "description": "A gaming theme for Visual Studio Code",
  "keywords": [
    "gaming",
    "vscode",
    "theme"
  ],
  "author": {
    "name": "Akiomi Kamakura",
    "email": "akiomik@gmail.com"
  },
  "publisher": "omi",
  "homepage": "https://github.com/akiomik/vscode-gaming",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiomik/vscode-gaming"
  },
  "bugs": {
    "url": "https://github.com/akiomik/vscode-gaming/issues"
  },
  "license": "Apache-2.0",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [],
  "sponsor": {
    "url": "https://github.com/sponsors/akiomik"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gaming.start",
        "title": "Start gaming mode"
      },
      {
        "command": "vscode-gaming.stop",
        "title": "Stop gaming mode"
      }
    ],
    "configuration": {
      "title": "Gaming",
      "properties": {
        "gaming.period": {
          "type": "number",
          "default": 10000,
          "description": "The colors cycle in milliseconds (defaults: 10000)"
        },
        "gaming.updateTime": {
          "type": "number",
          "default": 50,
          "description": "The updating interval in milliseconds (defaults: 5))"
        },
        "gaming.target": {
          "type": "string",
          "default": "editor.background",
          "description": "The gaming target in `workbench.colorCustomizations` namespace (defaults: \"editor.background\")"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "prepublish": "vsce package",
    "publish": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vscode-test",
    "format": "biome check --apply .",
    "lint": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.3"
  }
}
